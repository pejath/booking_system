<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.id %></td>

        <td><%= apartment.apartment_class %></td>
        <td><%= apartment.price %></td>

        <td><%= apartment.hotel.name %></td>
        <td><%= link_to 'Show', apartment %></td>
        <% if current_user.try(:role) == 'Admin' %>
          <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
          <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
  <% else %>
  <%= link_to 'Sing up', new_user_registration_path %>
  <%= link_to 'sing out', new_user_session_path %>

  <% end %>
